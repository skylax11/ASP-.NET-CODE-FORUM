@using letsDoThis.Models
@model User
@{
    ViewBag.Title = "Login";
}
<link href="~/Content/bg-image.css" rel="stylesheet" />
<link href="~/Content/login.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    @using (Html.BeginForm())
    {
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <span class="glyphicon glyphicon-user Myicon"></span><span class="Myicon" style="font-size:25px;"><strong>KULLANICI GİRİŞİ</strong></span>
            <!-- Login Form -->
            <form>
                @Html.TextBoxFor(x => x.UserName, new { @class = "fadeIn second", id = "login", placeholder = "Halihazırdaki Kullanıcı Adınız" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                <br />

                @Html.TextBoxFor(x => x.email, new { @class = "fadeIn third", id = "password", placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                <Br />
                @if (Session["message"] != null)
                {
                    @Session["message"]
                    Session["message"]=null;


}
                @if (TempData["hata"] != null)
                {
                    @TempData["hata"]
                    TempData["hata"]=null;
}
                <br />
                <br />
                <input type="submit" class="fadeIn fourth" value="Log In">

            </form>

        </div>
    }
</div>



