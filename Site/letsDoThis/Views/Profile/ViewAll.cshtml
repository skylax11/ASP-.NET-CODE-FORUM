@using letsDoThis.Models
@model IEnumerable<User>

@{ User currentUser = new User();
    if (Session["login"] != null)
    {
        currentUser = Session["login"] as User;

    }
    else
    {
        currentUser = null;
    }


    }
<a href="/Profile/SetAsAdmin" class="btn btn-dark">
    <span class="glyphicon glyphicon-plus"></span> Oluştur
</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActivate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivateGuid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.ProfileImage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActivate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivateGuid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ProfileImage)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.UserID }, new { @class = "btn btn-sm btn-warning" })
                @if (item.UserID == currentUser.UserID)
                {
                    @Html.ActionLink("Delete", "DeleteDetectedProfile", new { id = item.UserID }, new { @class = "btn btn-sm btn-danger disabled" })
                }
                else
                {
                    @Html.ActionLink("Delete", "DeleteDetectedProfile", new { id = item.UserID }, new { @class = "btn btn-sm btn-danger" })

                }
            </td>
            
        </tr>
    }

</table>
